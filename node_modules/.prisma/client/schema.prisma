generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

//DEFINIR EL MODELO
model User {
  id        Int         @default(autoincrement()) @id
  email     String      @unique
  name      String?
  notes     Note[]
}

model Note{
  id          Int         @default(autoincrement()) @id
  title       String
  description String?
  date        DateTime
  user        User?       @relation(fields: [userId],references: [id])
  userId      Int
}